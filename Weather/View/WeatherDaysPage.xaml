<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:local="clr-namespace:Weather.ViewModel"
             mc:Ignorable="d"
             NavigationPage.HasNavigationBar="False"
             x:Class="Weather.View.WeatherDaysPage">
    
    <ContentPage.BindingContext>
        <local:WeatherDaysViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="labelStyle" 
                   TargetType="Label">
                <Setter Property="FontSize" 
                        Value="Small" />
                <Setter Property="TextColor" 
                        Value="White" />
            </Style>
            <local:LongToDateTimeConverter x:Key="longToDateTimeConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <SwipeView BackgroundColor="WhiteSmoke">
            <SwipeView.LeftItems>
                <SwipeItems Mode="Reveal" SwipeBehaviorOnInvoked="RemainOpen">
                    <SwipeItemView>
                        <StackLayout Spacing="20"
                                     WidthRequest="250"
                                     VerticalOptions="StartAndExpand">
                            <StackLayout.Margin>
                                <OnPlatform x:TypeArguments="Thickness"
                                            iOS="0,35,0,0"/>
                            </StackLayout.Margin>
                            <pv:PancakeView CornerRadius="15" VerticalOptions="End"
                                            BackgroundColor="#c7dfff"
                                            Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="GPS" Padding="5"
                                           HorizontalOptions="Start"
                                           FontSize="Body"
                                           TextColor="Black"/>
                                    <Switch IsToggled="{Binding StatusGetCoordinates}"
                                            Grid.Column="1"
                                            HorizontalOptions="End"/>
                                </Grid>
                            </pv:PancakeView>

                        </StackLayout>
                    </SwipeItemView>
                </SwipeItems>
            </SwipeView.LeftItems>
            <Grid >
                <pv:PancakeView CornerRadius="0">
                    <Grid BackgroundColor="#0fadd1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid RowSpacing="0" BackgroundColor="#0fadd1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.Margin>
                                <OnPlatform x:TypeArguments="Thickness"
                                            iOS="0,35,0,0"/>
                            </Grid.Margin>
                            <ImageButton Source="Menu"
                                         Margin="20"
                                         WidthRequest="23"
                                         HeightRequest="25"
                                         HorizontalOptions="Start"
                                         VerticalOptions="Center" />
                            <Grid Grid.Row="1">
                                <StackLayout Spacing="20">
                                    <StackLayout Orientation="Horizontal"
                                                 Spacing="50"
                                                 HorizontalOptions="Center">
                                        <StackLayout VerticalOptions="Center">
                                            <Image  Source="{Binding ImageWeatherSourceNow, StringFormat='w{0}'}"
                                                    Scale="2" 
                                                    WidthRequest="67"
                                                    HeightRequest="50"/>
                                            <Label  Text="{Binding DescriptionWeatherNow}"
                                                    TextColor="White"
                                                    Margin="0,20,0,0"
                                                    FontSize="13"
                                                    HorizontalOptions="Center"/>
                                        </StackLayout>
                                        <StackLayout VerticalOptions="Center">
                                            <Label  Text="{Binding Location}"
                                                    TextColor="White"
                                                    FontSize="20"
                                                    FontAttributes="Bold"
                                                    HorizontalOptions="Center"/>
                                            <Label  Text="{Binding DateToday}"
                                                    TextColor="White"
                                                    FontSize="13"
                                                    HorizontalOptions="Center"/>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout>
                                        <StackLayout Orientation="Horizontal"
                                                        HorizontalOptions="Center"
                                                        Spacing="0">
                                            <Label Text="{Binding TempNow, StringFormat='{}{0:#}'}"
                                                    TextColor="White"
                                                    FontSize="130"
                                                    HorizontalOptions="Center"/>
                                            <Label Text="°"
                                                    TextColor="White"
                                                    FontSize="130"
                                                    HorizontalOptions="Center"/>
                                        </StackLayout>
                                        <Label Text="CELSIUS"
                                                Margin="0,-30,0,0"
                                                TextColor="White"
                                                FontSize="13"
                                                HorizontalOptions="Center"/>
                                    </StackLayout>
                                    <Grid WidthRequest="320"
                                            ColumnSpacing="10"
                                            HorizontalOptions="CenterAndExpand"
                                            VerticalOptions="CenterAndExpand">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackLayout Orientation="Vertical"
                                                        Spacing="10"
                                                        HorizontalOptions="CenterAndExpand">
                                            <Image Source="humidity.png"
                                                    HeightRequest="25"
                                                    HorizontalOptions="Center"/>
                                            <StackLayout Spacing="7"
                                                            HorizontalOptions="CenterAndExpand">
                                                <Label Text="{Binding HumidityNow, StringFormat='{0}%'}"
                                                        TextColor="White"
                                                        FontSize="14"
                                                        FontAttributes="Bold"
                                                        HorizontalOptions="Center"/>
                                                <Label Text="Humidity"
                                                        TextColor="White"
                                                        Margin="0,-5,0,0"
                                                        FontSize="11"
                                                        HorizontalOptions="Center"/>
                                            </StackLayout>
                                        </StackLayout>
                                        <StackLayout Grid.Column="1"
                                                        Orientation="Vertical"
                                                        Spacing="10"
                                                        HorizontalOptions="CenterAndExpand">
                                            <Image Source="wind.png"
                                                    HeightRequest="25"
                                                    HorizontalOptions="Center"/>
                                            <StackLayout Spacing="7"
                                                            HorizontalOptions="CenterAndExpand">
                                                <Label Text="{Binding WindNow, StringFormat='{0}m/s'}"
                                                        TextColor="White"
                                                        FontSize="14"
                                                        FontAttributes="Bold"
                                                        HorizontalOptions="Center"/>
                                                <Label Text="Wind"
                                                        TextColor="White"
                                                        Margin="0,-5,0,0"
                                                        FontSize="11"
                                                        HorizontalOptions="Center"/>
                                            </StackLayout>
                                        </StackLayout>
                                        <StackLayout Grid.Column="2"
                                                        Orientation="Vertical"
                                                        Spacing="10"
                                                        HorizontalOptions="CenterAndExpand">
                                            <Image Source="gauge.png"
                                                    HeightRequest="25"
                                                    HorizontalOptions="Center"/>
                                            <StackLayout Spacing="7"
                                                            HorizontalOptions="CenterAndExpand">
                                                <Label Text="{Binding PressureNow, StringFormat='{0}hpa'}"
                                                        TextColor="White"
                                                        FontSize="14"
                                                        FontAttributes="Bold"
                                                        HorizontalOptions="Center"/>
                                                <Label Text="Pressure"
                                                        TextColor="White"
                                                        Margin="0,-5,0,0"
                                                        FontSize="11"
                                                        HorizontalOptions="Center"/>
                                            </StackLayout>
                                        </StackLayout>
                                        <StackLayout Grid.Column="3"
                                                        Orientation="Vertical"
                                                        Spacing="10"
                                                        HorizontalOptions="CenterAndExpand">
                                            <Image Source="cloudiness.png"
                                                    HeightRequest="25"
                                                    HorizontalOptions="Center"/>
                                            <StackLayout Spacing="7"
                                                            HorizontalOptions="CenterAndExpand">
                                                <Label Text="{Binding CloudinessNow, StringFormat='{0}%'}"
                                                        TextColor="White"
                                                        FontSize="14"
                                                        FontAttributes="Bold"
                                                        HorizontalOptions="Center"/>
                                                <Label Text="Cloudiness"
                                                        TextColor="White"
                                                        Margin="0,-5,0,0"
                                                        FontSize="11"
                                                        HorizontalOptions="Center"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </Grid>
                                </StackLayout>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Frame CornerRadius="20" Margin="0,0,0,-20" Padding="20,30,20,0">
                                <RefreshView Command="{Binding LoadItemsCommand}"
                                                IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
                                    <ListView ItemsSource="{Binding Week}" 
                                                SeparatorVisibility="None"
                                                CompressedLayout.IsHeadless="False"
                                                    IsGroupingEnabled="False"
                                                    HasUnevenRows="True"
                                                Margin="0,0,0,0">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <ViewCell.View>
                                                        <Frame CornerRadius="0" Margin="0,0,0,20" BackgroundColor="#4f97e3" HasShadow="False">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="*"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Label Grid.ColumnSpan="4"
                                                                        Style="{StaticResource labelStyle}"
                                                                        Text="{Binding dt, Converter={StaticResource longToDateTimeConverter}, StringFormat='{}{0:dddd}'}"/>
                                                                <Label Grid.Row="1"
                                                                        Style="{StaticResource labelStyle}"
                                                                        Grid.ColumnSpan="4"
                                                                        Text="{Binding dt, Converter={StaticResource longToDateTimeConverter}, StringFormat='{}{0:dd/MM/yyyy}'}"/>
                                                                <Image Source="{Binding weather[0].icon, StringFormat='w{0}'}"
                                                                        HeightRequest="45"
                                                                        Scale="1"
                                                                        Grid.RowSpan="2"
                                                                        Grid.Row="0"
                                                                        Grid.Column="4"
                                                                        Grid.ColumnSpan="3"
                                                                        HorizontalOptions="Center"/>
                                                                <Label Grid.Row="1"
                                                                        Style="{StaticResource labelStyle}"
                                                                        Grid.Column="8"
                                                                        Grid.ColumnSpan="2"
                                                                        Text="{Binding temp.max,StringFormat='{}{0:#}°'}"/>
                                                                <Grid.GestureRecognizers>
                                                                    <TapGestureRecognizer
                                                                        Grid.ColumnSpan="9"
                                                                        NumberOfTapsRequired="1"
                                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:WeatherDaysViewModel}}, Path=OnForecastHourly}"
                                                                        CommandParameter="{Binding .}">
                                                                    </TapGestureRecognizer>
                                                                </Grid.GestureRecognizers>
                                                            </Grid>
                                                        </Frame>
                                                    </ViewCell.View>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </RefreshView>
                            </Frame>
                        </Grid>     
                    </Grid>
                </pv:PancakeView>
            </Grid>
        </SwipeView>
    </Grid>
</ContentPage>